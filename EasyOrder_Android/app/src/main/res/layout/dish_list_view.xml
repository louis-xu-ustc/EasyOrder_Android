<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/dish_image"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#3399FF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_name"
        android:layout_toEndOf="@+id/dish_image"
        android:paddingStart="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dish_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/dish_price"
        android:layout_toEndOf="@+id/dish_image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dish_quantity"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical"
            android:paddingEnd="40dp"
            android:paddingStart="2dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/dish_add_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/add" />

        <Button
            android:id="@+id/dish_minus_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/minus" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_action_bar"
        android:layout_toEndOf="@+id/dish_image"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2.0"
        android:stepSize="1.0" />

</RelativeLayout>

